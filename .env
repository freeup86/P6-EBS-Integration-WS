# Server configuration
PORT=3000
NODE_ENV=production
SESSION_SECRET=your-strong-production-secret-key

# P6 API Configuration
P6_API_URL=https://your-production-p6-server.com/api/v1
P6_USERNAME=production_p6_username
P6_PASSWORD=production_p6_password
P6_AUTH_TYPE=oauth  # Consider using more secure auth methods
P6_API_TIMEOUT=30000
P6_RETRY_ATTEMPTS=3
P6_CLIENT_ID=your-client-id
P6_CLIENT_SECRET=your-client-secret

# EBS API Configuration
EBS_API_URL=https://your-production-ebs-server.com/api/v1
EBS_USERNAME=production_ebs_username
EBS_PASSWORD=production_ebs_password
EBS_AUTH_TYPE=oauth  # Consider using more secure auth methods
EBS_API_TIMEOUT=30000
EBS_RETRY_ATTEMPTS=3
EBS_CLIENT_ID=your-client-id
EBS_CLIENT_SECRET=your-client-secret

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security
CORS_ORIGIN=https://your-production-domain.com
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window